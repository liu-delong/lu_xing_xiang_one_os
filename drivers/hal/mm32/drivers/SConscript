Import('OS_ROOT')
Import('osconfig')
from build_tools import *

pwd = PresentDir()

# add the general drivers.
src = Split("""
""")

if IsDefined(['OS_USING_PIN']):
    src += ['drv_gpio.c']
    
if IsDefined(['OS_USING_SERIAL']):
    src += ['drv_usart.c']
    
if IsDefined(['OS_USING_RTC']):
    src += ['drv_rtc.c']
    

src += ['drv_common.c']

path =  [pwd]

group = AddCodeGroup('hal/drivers', src, depend = ['SOC_FAMILY_MM32'], CPPPATH = path)

Return('group')
